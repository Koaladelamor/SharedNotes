<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SharedNotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextCustomStyle">
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="MainBackGroundColor">
        <!-- Primary brand color. -->
        <item name="android:background">@color/lightGrey</item>
        <item name="android:backgroundTint">@color/lightGrey</item>
    </style>

    <style name="MainBackGroundTitleColor">
        <!-- Primary brand color. -->
        <item name="android:background">@color/lightGreen</item>
        <item name="android:backgroundTint">@color/lightGreen</item>
        <item name="iconTint">@color/black</item>
        <item name="android:iconTint">@color/black</item>

    </style>

    <style name="NotesStyle">
        <!-- Primary brand color. -->
        <item name="android:backgroundTint">@color/lightGreen2</item>
    </style>

    <style name="DeleteButtonStyle">
        <!-- Primary brand color. -->
        <item name="iconTint">@color/black</item>
        <item name="android:iconTint">@color/black</item>
        <item name="android:backgroundTint">@color/lightRed</item>
    </style>

    <style name="DefaultButton">
        <!-- Primary brand color. -->
        <item name="android:backgroundTint">@color/lightGreen</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LoginBackground">
        <!-- Primary brand color. -->
        <item name="android:background">@color/lightGreen</item>
    </style>

    <style name="LoginButtons">
        <!-- Primary brand color. -->
        <item name="android:backgroundTint">@color/darkGreen</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LoginTitle">
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/darkGreen</item>
    </style>

</resources>